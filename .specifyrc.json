{
  "repository": "@oyo-design/suitedesign",
  "head": "specifyrc-json",
  "base": "main",
  "version": "2",
  "rules": [
    {
      "name": "SDTF",
      "parsers": [
        {
          "name": "to-sdtf",
          "output": {
            "type": "file",
            "filePath": "output/tokens.json"
             {
      "name": "CSS / Colors",
      "parsers": [
        {
          "name": "filter",
          "options": {
            "query": {
              "where": {
                "collection": "^Colors$",
                "select": {
                  "children": true
                }
          }
        },
        {
          "name": "to-css-custom-properties",
          "output": {
            "type": "file",
            "filePath": "output/css/tokens.css"
          }
        },
        {
          "name": "to-kotlin",
          "output": {
            "type": "file",
            "filePath": "output/android/tokens.kt"
          }
        },
        {
          "name": "to-swift",
          "output": {
            "type": "file",
            "filePath": "output/ios/tokens.swift"
          }
        },
        {
          "name": "to-typescript",
          "output": {
            "type": "file",
            "filePath": "output/react/tokens.ts"
          }
        }
      ]
    }
  ]
}
